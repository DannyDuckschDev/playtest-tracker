{
    "compilerOptions": {
      "types": ["node", "jest"],
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": false
    },
    "include": ["src", "jest.config.ts", "tests"],
  }
  